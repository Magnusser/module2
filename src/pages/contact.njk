{% extends 'src/partials/layout.njk'%}
{% block content %}
<section class="lg:pt-[241px] lg:px-[274px] md:px-[16px] md:pt-[130px] px-[16px] pt-[130px]">
    <svg class="absolute xl:-bottom-[250px] lg:-bottom-[300px] bottom-[350px] right-0 -z-10 lg:h-[549px] lg:w-[1920px] h-[258px] w-[850px]">
        <defs>
            <linearGradient id="landscapeGradient" x1="0" y1="0" x2="0" y2="1">
                <stop offset="0%" stop-color="#FFFAED"/>
                <stop offset="50%" stop-color="#CB2729"/>
            </linearGradient>
        </defs>
        <use href="/landscape.svg" fill="url(#landscapeGradient)" class="lg:h-[549px] lg:w-[1920px] h-[258px] w-[850px]"/>
    </svg>
    <div class="lg:pb-[50px] pb-[10px] w-full max-w-xl break-words">
        <h2 class="font-beardbone text-left xl:text-[128px] text-[64px] text-primary">WRITE TO US!</h2>
    </div>
    <div class="lg:pb-[400px] pb-[120px]">
        <input type="text" placeholder="Your email address..." class="w-full p-[15px] text-[20px] border-2 border-primary rounded-[10px] lg:mb-[24px] sm: mb-[10px]">
        <input type="email" placeholder="Your message..." class="w-full p-[15px] text-[20px] border-2 border-primary rounded-[10px] lg:mb-[40px] sm: mb-[20px]">
        <a class="font-khula text-center bg-primary text-white py-[15px] px-[30px] text-[20px] rounded-[30px] cursor-pointer inline-block no-underline">
            SEND MESSAGE
        </a>
    </div>
</section>
{% endblock %}